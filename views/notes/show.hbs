<h3>{{note.title}}
    <small>{{{editIcon note.user user note._id false}}}</small>
</h3>
<div class="row">
    <div class="col s12 m8">
        <div class="card note">
            <div class="card-content center-align">
                <div class="code-date">
                    <span class="card-title">{{note.subjectCode}}</span>
                    <span class="card-title">{{formatDate date 'MMMM Do YYYY, h:mm:ss a'}}</span>
                </div>
                <img src="/notes/images/{{note.imageKey}}" alt="" class="responsive-img">
                <p>{{note.description}}</p>
            </div>
            <div class="card-action center-align">
                <a href="{{note.link}}" class="btn grey">Get the Notes</a>
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{note.user.displayName}}</span>
                <img src="{{note.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/notes/user/{{note.user._id}}">More From {{note.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>