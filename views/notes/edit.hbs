<h3>Edit Notes</h3>
<div class="row">
    <form action="/notes/{{note._id}}" method="POST" class="col s12">
        <input type="hidden" name="_method" value="PUT">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="{{note.title}}">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select name="status" id="status">
                    {{#select note.status}}
                    <option value="public" selected>Public</option>
                    <option value="private">Private</option>
                    {{/select}}
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="subjectCode" name="subjectCode" value="{{note.subjectCode}}">
                <label for="subjectCode">Subject Code</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <textarea type="text" name="description" id="description"
                    class="materialize-textarea">{{note.description}}</textarea>
                <label for="description">Description</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="link" name="link" value="{{note.link}}">
                <label for="link">Link</label>
            </div>
        </div>

        <div class="row file-field input-field">
            <div class="btn">
                <span>Upload Preview Image</span>
                <input type="file">
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>